# OpenBASN Global configuration file

### Global configs
global.sensortypes = 3
global.sensortype.1 = thermometer
global.sensortype.2 = ecg
global.sensortype.3 = oximeter
# *Obs: Do not chance sensortype order!

### Supercomponent execution pattern configurations

odsupercomponent.pulsetimeack.timeout=2000000 # 2 seconds in microseconds.
odsupercomponent.pulsetimeack.yield=5000 # 0.005 seconds in microseconds.

### SensorModule configuration

## Thermometer configuration patterns
## 50 >= "high" > 38 >= "moderate" > 37 >= "normal" > 35 >= "moderate" > 30 >= "high" > 0
# no risk   - thermometer(mean = 36, stddev = 0.5) 
# risky     - thermometer(mean = 37, stddev = 0.5) || thermometer(mean = 33, stddev = 0.5)
# critical  - thermometer(mean = 40, stddev = 0.5) || thermometer(mean = 28, stddev = 0.5)   

sensor.thermometer.stddev = 0.5
sensor.thermometer.mean.norisk = 36
sensor.thermometer.mean.risky = 38
sensor.thermometer.mean.risky2 = 33
sensor.thermometer.mean.critical = 40
sensor.thermometer.mean.critical2 = 28

## Oximeter configuration patterns
## 100 >= "normal" > 94 >= "moderate" > 90 >= "high" > 0
# no risk   - oxiemeter(mean = 97, stddev = 2)
# risky     - oxiemeter(mean = 92, stddev = 2)
# critical  - oxiemeter(mean = 85, stddev = 2)

sensor.oximeter.stddev = 2
sensor.oximeter.mean.norisk = 97
sensor.oximeter.mean.risky = 92
sensor.oximeter.mean.critical = 85

## Ecg configuration patterns
## 150 >= "high" > 120 >= "normal" > 80 >= "high" > 0
# no risk   - ecg(mean = 100, stddev = 10)
# critical  - ecg(mean = 125, stddev = 10) || ecg(mean = 60, stddev = 10)

sensor.ecg.stddev = 10
sensor.ecg.mean.norisk = 100
sensor.ecg.mean.critical = 125
sensor.ecg.mean.critical2 = 60

## Node Module Sensor configurations
# temperature sensor (low risk)
sensor:0.thermometer.active = 1
sensor:0.thermometer.samplerate = 1
sensor:0.thermometer.mean.behavior = norisk
sensor:0.ecg.active = 0
sensor:0.oximeter.active = 0

# heart rate sensor (low risk)
sensor:1.ecg.active = 1
sensor:1.ecg.samplerate = 1
sensor:1.ecg.mean.behavior = norisk
sensor:1.thermometer.active = 0
sensor:1.oximeter.active = 0

# oxygen sensor (low risk)
sensor:2.oximeter.active = 1
sensor:2.oximeter.samplerate = 1
sensor:2.oximeter.mean.behavior = norisk
sensor:2.thermometer.active = 0
sensor:2.ecg.active = 0

# temperature sensor (moderate risk)
sensor:10.thermometer.active = 1
sensor:10.thermometer.samplerate = 1
sensor:10.thermometer.mean.behavior = risky
sensor:10.ecg.active = 0
sensor:10.oximeter.active = 0

# oxygen sensor (moderate risk)
sensor:12.oximeter.active = 1
sensor:12.oximeter.samplerate = 1
sensor:12.oximeter.mean.behavior = risky
sensor:12.thermometer.active = 0
sensor:12.ecg.active = 0

# temperature sensor (high risk)
sensor:20.thermometer.active = 1
sensor:20.thermometer.samplerate = 1
sensor:20.thermometer.mean.behavior = critical
sensor:20.ecg.active = 0
sensor:20.oximeter.active = 0

# heart rate  sensor (high risk)
sensor:21.ecg.active = 1
