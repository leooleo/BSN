		<declaration>/*******************Constants*******************/

/*******************Variables*******************/
int m_health_status=low;

clock x;

//buffer attributes
int[0,1] m_buffer[BUFFER_SIZE];
int len, aux;

/**************Temporary Variables**************/
bool enable=false;
int container;

/*******************Functions*******************/
bool isEmpty(){
    return (len==0)?true:false;
}

int dequeue(){
    
    int el = m_buffer[len-1];
    int i = 0;
    len--;
    while(i &lt; len){
        m_buffer[i] = m_buffer[i+1];
        i++;
    }

    m_buffer[i] = 0;
    
    return el;
}</declaration>
