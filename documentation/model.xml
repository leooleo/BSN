const int Tpb = 50;         //Tempo de processamento do bodyhub
const int Texecb = Tpb*N;    //Tempo de execução do bodyhub

/*******************Variables*******************/
int m_health_status=low;
clock y;

//buffer attributes
int[low,high] m_buffer[BUFFER_SIZE];
int len, aux;

/**************Temporary Variables**************/
int container;

/*******************Functions*******************/
bool isEmpty(){
    return (len==0)?true:false;
}

bool isFull(){
    return (len==BUFFER_SIZE)?true:false;
}

void insert(int[low,high] message){
    m_buffer[len]=message;
    len++;
}

int dequeue(){
    
    int el = m_buffer[len-1];
    int i = 0;
    len--;
    while(i &lt; len){
        m_buffer[i] = m_buffer[i+1];
        i++;
    }

    m_buffer[i] = 1;
    
    return el;
}</declaration>
