bool isEmpty(){
    return (len==0)?true:false;
}

int dequeue(){
    
    int el = m_buffer[len-1];
    int i = 0;
    len--;
    while(i &lt; len){
        m_buffer[i] = m_buffer[i+1];
        i++;
    }

    m_buffer[i] = 0;
    
    return el;
